{
  "name": "rigse-react-components",
  "version": "1.0.0",
  "description": "Concord Portal React Components",
  "main": "server/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-serve",
    "start:prod": "cross-env NODE_ENV=production webpack-serve",
    "lint": "standard \"src/**/*.js\"",
    "lint:fix": "standard --fix \"src/**/*.js\"",
    "build": "npm run lint && npm run build-library && npm run copy-files",
    "dev:build": "npm run dev:build-library && npm run copy-files",
    "build-library": "cross-env NODE_ENV=production webpack",
    "dev:build-library": "cross-env NODE_ENV=development webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "copy-files": "cp ./dist/react-components.js ../rails/app/assets/javascripts/ && cp ./dist/react-test-globals.js ../rails/app/assets/javascripts/",
    "stats": "cross-env NODE_ENV=production webpack --profile --json > stats.json"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jQuery",
      "Portal",
      "PortalComponents",
      "DayPickerOverlay",
      "gtag"
    ]
  },
  "jest": {
    "testURL": "http://portal-test.concord.org",
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "src/library"
    ],
    "setupFiles": [
      "./setup-jest-mock.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/concord-consortium/portal-pages.git"
  },
  "author": "Doug Martin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/concord-consortium/portal-pages/issues"
  },
  "homepage": "https://github.com/concord-consortium/portal-pages#readme",
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.1",
    "file-loader": "^6.2.0",
    "formsy-react": "^2.3.0",
    "glob": "^7.2.3",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jquery": "^3.7.1",
    "live-server": "^1.2.2",
    "nock": "^10.0.6",
    "react-select": "^5.8.0",
    "sass": "^1.77.1",
    "sass-loader": "^14.2.1",
    "standard": "^12.0.1",
    "style-loader": "^4.0.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "cheerio": "^1.0.0-rc.1",
    "chokidar": "^1.7.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "create-react-class": "^15.6.3",
    "cross-env": "^5.2.0",
    "date-fns": "^3.6.0",
    "debug": "~2.6.3",
    "express": "^4.15.3",
    "faye-websocket": "^0.11.1",
    "memory-fs": "^0.4.1",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "morgan": "~1.9.1",
    "ncp": "^2.0.0",
    "opn": "^5.0.0",
    "pug": "~2.0.0-beta11",
    "rc-tooltip": "^3.7.2",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-modal": "^3.16.1",
    "request": "^2.88.0",
    "throttle-debounce": "^2.3.0",
    "uuid": "^8.3.2"
  }
}
