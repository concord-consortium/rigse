= javascript_include_tag "student_roster.js" 
.maincontainer.pie
  .container
    .content
      = f.error_messages
    %div
      %table.clazzdata.floatR
        %tr
          %td.title=label_tag :name, 'Teacher ', :class=>"left"
          %td=label_tag :name, portal_clazz.teacher.name , :class=>"labelvalue"
          %td.title=label_tag :name, 'Semester ', :class=>"left"
          %td=label_tag :name, portal_clazz.semester.name , :class=>"labelvalue"
          %td.title=label_tag :name, 'Class Word ', :class=>"left"
          %td=label_tag :name, portal_clazz.class_word, :class=>"labelvalue"
      .header.clearBoth Student Roster
      .clazzsummary
        ='Class Name : '
        %span{:style => "font-weight:bold"} #{portal_clazz.name}
        %br
        ='Student Count :' 
        %span{:style => "font-weight:bold"} #{portal_clazz.students.length}
      %table.clazzdata
        %tr
          %td.hide_in_print
            %input{:type=>"button", :value=>"Add New Student", :onclick=>"get_School_Student_List()", :class=>"pie"} 
          %td.hide_in_print{:style=>"padding-left:10px"}
            %input{:type=>"button", :value=>"Print Student Roster", :onclick=>"window.print();", :class=>"pie"}

      %table{:width=>"100%", :style=>"clear:both"}
        %tr
          %td
            .item{:id=>'students_listing'}
              = render :partial => 'portal/students/table_for_clazz', :locals => {:portal_clazz => portal_clazz}
      %br
      %br
      .right
        %table{:width=>"100%"}
          %tr
            %td.hide_in_print{:style=>"text-align:right"}
              /= f.submit 'Save' 
              /&nbsp;&nbsp; 
              = link_to "Cancel", portal_clazz_url(portal_clazz)
            
      = f.hidden_field :teacher_id
      = f.hidden_field :id