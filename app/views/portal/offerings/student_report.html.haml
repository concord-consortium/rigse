- section = (@offering.clazz.section && @offering.clazz.section.length > 0) ? @offering.clazz.section : nil
- section = (section ? "(#{section})" : "")
- show_print = true
- learner = @learner
- report_title = capture do
  = "Report for: #{learner.name}, #{@offering.clazz.name} #{section}"
- report_summary = capture do
  = learner_report_summary(learner, {:show_selection_controls => false})
= render :partial => '/portal/reports/report', :locals => { :report_context => learner, :offering => @offering,  :learners => learner, :page_elements => @page_elements, :show_selection_controls => false, :show_print_controls =>false,  :show_print_all => false, :report_title => report_title,  :show_blanks => false, :report_summary => report_summary } 
- show_print = false