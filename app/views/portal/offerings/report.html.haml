= javascript_include_tag('contentflow_report_fix.js')

- report_title = capture do
  - section = (@offering.clazz.section && @offering.clazz.section.length > 0) ? @offering.clazz.section : nil
  - section = (section ? "(#{section})" : "")
  = "Report for: #{@offering.clazz.name} #{section}"

- report_summary = capture do
  = offering_report_summary(@offering)
!= use_contentflow
= render :partial => '/portal/reports/report', :locals => {:report_context => @offering, 
    :offering => @offering, :learners => @learners, :page_elements => @page_elements,
    :report_title => report_title, :report_summary => report_summary }
