%OTQuestion{:local_id => ot_local_id_for(multiple_choice)}
  %prompt
    %OTCompoundDoc
      %bodyText= multiple_choice.prompt.html_safe
  %input
    %OTChoice{ :name => 'Multiple choice', :alignContent => '0', :selectionUI => multiple_choice.selection_ui, :enableRationale => "#{multiple_choice.enable_rationale}", :rationalePrompt => multiple_choice.rationale_prompt }
      %choices
        - multiple_choice.choices.each_with_index do |choice, i|
          %OTCompoundDoc{:name => "#{i+1}. #{h(choice.choice)}", :local_id => ot_local_id_for(choice)}
            %bodyText=h(choice.choice)
