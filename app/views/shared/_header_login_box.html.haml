.header-login-box
  %div
    = form_for( @user, :as => 'user', :url => '/users/sign_in', :html => {:id=>"header-project-signin"} )  do |f|
      %table{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
        %tbody
          %tr.first-row
            %td
              = f.label :login, "Username",:for=>"header_login"
            %td.login-box
              = f.text_field :login,:id=>'header_login'
          %tr.second-row
            %td
              = f.label :password, "Password", :for=>"header_password"
            %td.password-box
              = f.password_field :password,:id=>'header_password',:class=>'text'
          %tr.third-row
            %td
            %td
              =link_to 'Forgot login?',forgot_password_path, :id=>"link_forgot_password"
              | 
              =link_to 'Register', pick_signup_path
              = f.submit "GO", :id=>"LoginSubmitButtonHeader"
      .clear_both