%li{:id=>"sortable_element_#{offering.id}"}
  %div
    %table.offerings
      %tr
        %td
          = check_box_tag "clazz_investigations[]", offering.id, offering.active, :class => "filter_checkbox",:id=>"clazz_investigations_#{offering.id}"
          = hidden_field_tag "clazz_investigations_hidden[]", offering.id
        %td.offering_name
          %label{:for=>"clazz_investigations_#{offering.id}"}
            =offering.name