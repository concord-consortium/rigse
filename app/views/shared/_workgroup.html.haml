#lightbox_hood{:style => "display: none;"}
#lightbox_content{:style => "display: none;"}
  #workgroup_root
    #workgroup_header
      %a#cancel_button
        cancel
    .padded_content
      %div
        %span{:style => 'display: inline-block;'}
          %a.button#run_button{:style => 'display: inline-block;'} 
            run
          %span#run_message
            the activity now
        %span
          , or
          %button#show_workgroups{:style=>'display: inline-block;'} 
            add collaborators
      %br

      #workgroup_panel{:style=>'display: none'}
        #add_group{:style => "display: none;"}
          %h3 add collaborators
          %select#learners_dropdown
          %button#add_button
            add
        
        #load_wait{:style => 'display: none;'}
          = image_tag('wait_long.gif',:style=>"border: none;")
          loading collaborator list. Please wait.
        
        #load_error{:style => 'display: none;'}
          error loading calaborator list. (try again?)
        
        #learners_container{:style => "display: none;"}
          %h3 existing collaborators:
          %div#learners_list
      #workgroup_templates
        templates:
        %div#learner_template.learner
          %a.delete.rollover
            = image_tag("delete.png", :alt=>"remove this student")
          %span.name_field
            Name Text
          %div.pending
            %input.password_field{:type=>'password', :name=>'password_field', :value=>''}
            %button.login_button
              ok
          %span.wait
            = image_tag('wait_long.gif',:style=>"border: none;")
          %span.complete
          %div.fail
            sorry. your password is wrong.
