%h1
  Edit image

= error_messages_for :image
= link_to image_tag(@image.image.url(:thumb)), @image.image.url(:attributed)
%br
- form_for(@image, :html => { :multipart => true }) do |f|
  = render :partial => 'form', :locals => {:f => f}
  %p
    = submit_tag "Update"

= link_to 'Show', @image
|
= link_to 'List', images_path
