= javascript_include_tag "instructional_materials.js"
%h1
  Recent Activity
= render :partial => "notice"
-if @clazz_offerings.length > 0
  .recent_activity_container
    %table{:width=>"100%"}
      %tr
        %td{:width=>"75%",:style=>"float:right"}
          = render :partial => 'progress_bar_legend'

    = render :partial => 'recent', :collection => @clazz_offerings, :as => :clazz_offering, :locals => { :report_learner => @report_learner}
-else
  %br
  %br
  .no_recent_activity
    = @no_recent_activity_msg.html_safe
    