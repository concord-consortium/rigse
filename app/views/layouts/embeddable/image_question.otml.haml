!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @image_question.uuid}
  =ot_imports
  %objects
    %OTSystem
      =ot_bundles(:title => @image_question.name)
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = Embeddable::ImageQuestion.display_name + ': ' + @image_question.name
              %object{ :refid => ot_refid_for(@image_question) }
      %library
        =yield :layout