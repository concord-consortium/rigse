!!! XML
= render :partial => "otml/character_entities"
%otrunk{ :id => @xhtml.uuid}
  =ot_imports
  %objects
    %OTSystem{:local_id => 'system'}
      =ot_bundles(:title => h(@xhtml.name))
      %root
        %OTCompoundDoc
          %bodyText
            #content
              %h3
                = h(Embeddable::Xhtml.display_name + ': ' + @xhtml.name)
              %object{ :refid => ot_refid_for(@xhtml) }/
      %library
        =yield :layout