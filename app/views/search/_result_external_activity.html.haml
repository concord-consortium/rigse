#external_activities_bookmark
.materials_container.external_activities
  .material_list_header
    = head_label
  %p.border_top= page_entries_info materials, :model=>"ExternalActivity"
  = will_paginate materials, {:param_name => 'external_activity_page', :params => {:controller => 'search', :action => 'index', :search_term => @search_term, :investigation_page => @investigation_page,:type=>'act'}}
  
  %table.result_material{:cellpadding=>0,:cellspacing=>0}
    %tr
      -if false
        %td.material_type
          .material_thumbnail
          .material_type
            = type
      %td.material_list
        - materials.each do |activity|
          - item_classes = []
          - item_classes << 'last' if materials.last==activity
          %div.material_list_item{:id=>"search_external_activity_#{activity.id}", :class => item_classes }
            = render :partial => 'result_item', :locals=>{:material=>activity}
  %br
  = will_paginate materials, {:param_name => 'external_activity_page', :params => {:controller => 'search', :action => 'index', :search_term => @search_term, :investigation_page => @investigation_page,:type=>'act'}}
