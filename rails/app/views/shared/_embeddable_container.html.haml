- options = { :complete => mce_init_string }.merge(local_assigns[:overrides] || {})
- if local_assigns.has_key? :page_element
  - view_class = for_teacher_only?(page_element) ? "teacher_only container_element" : "container_element"
  %div{ :id => dom_id_for(page_element, :item), :class => view_class }
    = show_menu_for(page_element, options) rescue "<div>Unsupported component type: #{component.class.name}</div>".html_safe
    %div{ :id => dom_id_for(component, :item), :class => 'item item_selectable '} 
      = render_show_partial_for(component) rescue "<div>Unsupported component type: #{component.class.name}</div>".html_safe
- else
  - view_class = for_teacher_only?(component) ? "teacher_only container_element" : "container_element"
  %div{ :id => dom_id_for(component), :class => "container_element" }
    = show_menu_for(component, options) rescue "<div>Unsupported component type: #{component.class.name}</div>".html_safe
    %div{ :id => dom_id_for(component, :item), :class => 'item item_selectable '}
      = render_show_partial_for(component) rescue "<div>Unsupported component type: #{component.class.name}</div>".html_safe
