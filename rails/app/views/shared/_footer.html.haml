#footer
  .footer-inner.cols
    .col-12
      %p
        Copyright
        %span.copyright
          &copy;
        - now = DateTime.now
        - copyright_year = now.year
        = copyright_year
        #{link_to 'Concord Consortium','https://concord.org', :id=>"footer_cc_link"}.
        All rights reserved.
        %br
        #{link_to 'Privacy Policy','https://concord.org/privacy-policy', :id=>"privacy-policy-link", :target=>"_blank"}
        &middot;
        Questions/Feedback:
        = mail_to(APP_CONFIG[:help_email] || APP_CONFIG[:default_admin_user][:email], "Send us an email", :subject => "#{APP_CONFIG[:site_name]} question", :encode => "javascript")
        %br
        Version:
        = ENV['CC_PORTAL_VERSION']
