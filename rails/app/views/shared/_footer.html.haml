#footer
  .footer-inner.cols
    .col-12
      %p
        &copy;
        = DateTime.now.year
        #{link_to 'The Concord Consortium','https://concord.org', :id=>"footer_cc_link"}.
        All Rights Reserved. The Concord Consortium is a 501(c)(3) nonprofit organization registered in the U.S.
        %br
        #{link_to 'Privacy Policy','https://concord.org/privacy-policy', :id=>"privacy-policy-link", :target=>"_blank", :rel=>"noopener"}
        &middot;
        Questions/Feedback:
        = mail_to(APP_CONFIG[:help_email] || APP_CONFIG[:default_admin_user][:email], "Send us an email", :subject => "#{APP_CONFIG[:site_name]} question", :encode => "javascript")
        %br
        Version:
        = ENV['CC_PORTAL_IMAGE_VERSION'].present? ? ENV['CC_PORTAL_IMAGE_VERSION'] : ENV['CC_PORTAL_VERSION']
        :javascript
          document.write("(React " + window.React.version + ")")
