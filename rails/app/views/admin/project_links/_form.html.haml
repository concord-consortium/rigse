.item
  = edit_menu_for(project_link, f, { :omit_cancel => true })
  - if project_link.errors.any?
    = project_link.errors.map(&:full_message).join(', ')
  .content
    %p
      %ul.menu_v
        %li
          Name:
          =f.text_field :name
        %li
          Id:
          =f.text_field :link_id
        %li
          URL:
          =f.text_field :href
        %li
          Position:
          =f.text_field :position
        %li
          Pop out:
          =f.check_box :pop_out
        %li
          Project:
          =f.collection_select(:project_id, projects, :id, :name)

