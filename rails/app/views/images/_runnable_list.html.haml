#images
  .action_menu
    .action_menu_header
      .action_menu_header_left
        - if local_assigns[:paginated_objects]
          %p= page_entries_info paginated_objects, :entry_name => Image.display_name
          %p.paginator
            = will_paginate paginated_objects

  - images.each do |image|
    = render(:partial => "image_item", :locals => {:image_item => image})
