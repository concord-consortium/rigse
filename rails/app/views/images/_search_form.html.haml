- # optional: hide_drafts_checkbox

.action_menu
  #search_title
    ="Search #{Image.display_name.pluralize}"
    %span#search_spinner.tiny{:style=>'display: none;'}
      searching ...
      = image_tag "ajax-loader.gif"

- # TODO: There is probably a cleaner method to avoid sumbissions on enter / return key:form
%form{ :id => 'image_search_form', :onkeypress => 'return event.keyCode!=13;'}
  %table{:width => "100%"}
    %tr
      %td{:style=>"padding: 0.5em;"}
        = label_tag :sort_order, 'sort: ', :class => 'right inline'
        = sort_dropdown(@sort_order, ["Newest","Alphabetical"])
      %td{:style=>"padding: 0.5em;"}
        = label_tag :filter, 'matching: ', :class=>"right inline"
        = text_field_tag :name, name
      %td{:style=>"padding: 0.5em;"}
        = label_tag :filter, 'only mine: ', :class=>"right inline"
        = check_box_tag :only_mine, only_mine
