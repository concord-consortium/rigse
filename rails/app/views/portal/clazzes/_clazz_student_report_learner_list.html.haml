%table.student_list
  - if show_investigation_row
    %tr
      %th
        %div.progressbar_container
          = "#{t(:investigation).upcase}"
  %tr
    %th
      %div.progressbar_container 
        ACTIVITY
  - students.each do |student|
    - student_name = student.user.last_name + ", " + student.user.first_name
    %tr
      %td.student_name{:title=>"#{student_name}"}
        %div.progressbar_container
          = student_name