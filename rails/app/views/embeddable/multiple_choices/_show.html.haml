%div{:id => dom_id_for(multiple_choice, :details), :class => 'content'}
  = wrap_edit_link_around_content(multiple_choice, options={:complete => mce_init_string}) do
    = multiple_choice.prompt.html_safe
    %table.multiple_choice_item
      - multiple_choice.choices.each do |choice|
        = render :partial => "embeddable/multiple_choices/show_choice", :locals => {:multiple_choice => multiple_choice, :choice => choice}
